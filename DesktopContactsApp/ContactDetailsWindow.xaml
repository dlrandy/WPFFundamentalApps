<Window x:Class="DesktopContactsApp.ContactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApp"
        mc:Ignorable="d"
        Title="ContactDetailsWindow" Height="200" Width="400"
        WindowStyle="None"
        ResizeMode="NoResize"
        >
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name:"></TextBlock>
            <TextBox x:Name="NameTextBox" Margin="0,0,0,5"></TextBox>
            <TextBlock Text="Email:"></TextBlock>
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,5"></TextBox>
            <TextBlock Text="Phone:"></TextBlock>
            <TextBox x:Name="PhoneTextBox" Margin="0,0,0,5"></TextBox>
            <Button Content="Update"
                    x:Name="UpdateButton"
                    Margin="0 0 0 5"
                    Click="UpdateButton_OnClick"></Button>
            <Button Content="Delete" x:Name="DeleteButton"
                    Margin=" 0 0 0 5"
                    Click="DeleteButton_OnClick"
                    Background="Red"
                    Foreground="White"
                    ></Button>
        </StackPanel>
    </Grid>
</Window>
